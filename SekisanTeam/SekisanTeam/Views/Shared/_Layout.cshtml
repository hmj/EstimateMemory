<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/bootstrap/bootstrap.css")" rel="Stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/bootstrap/bootstrap-responsive.css")" rel="Stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/themes/formstyle.css")" rel="Stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/bootstrap/bootstrap.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/script.js")" type="text/javascript"></script>
</head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
<body>
    <div class="page" id="top">
        <section id="search">
            @using (Html.BeginForm())
            {
                @Html.TextBox("search_word", null, new { @class = "search_word long" })
                @Html.SubmitButton("検索", null)
            }
        </section>
        <header>
            <nav>
                <div class="navbar">
                    <div class="navbar-inner">
                        <div class="container">
                            <div class=pull-left">
                            <a class="brand" href="/">見積記録 Ver2.0</a>
                            </div>
                            <ul class="nav pull-right">
                                <li class="inactive">@Html.ActionLink("見積データの登録", "Create", "MitsumoriData")</li>
                            </ul>
                            <ul class="nav pull-right">
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">データ<b class="caret"></b></a>
                                    <ul class="dropdown-menu">
                                        <li>@Html.ActionLink("クライアント", "Index", "Client")</li>
                                        <li>@Html.ActionLink("社員", "Index", "Member")</li>
                                        <li>@Html.ActionLink("見積データ", "Index", "MitsumoriData")</li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </nav>
        </header>
                <div style="text-align: right;">
                    <p>確認待ち<span id="wait_counter">0</span>件</p>
                </div>
        <section id="main">
            @RenderBody()
        </section>
        <footer>
        </footer>
    </div>
</body>
</html>
